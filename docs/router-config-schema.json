{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["router", "policy"],
  "properties": {
    "router": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string" },
        "background": { "type": "string" },
        "think": { "type": "string" },
        "longContext": { "type": "string" },
        "longContextThreshold": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "policy": {
      "type": "object",
      "required": ["denylist_paths", "sensitive_paths"],
      "properties": {
        "denylist_paths": { "type": "array", "items": { "type": "string" } },
        "sensitive_paths": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
