{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["Providers", "Router"],
  "properties": {
    "LOG": { "type": "boolean" },
    "LOG_LEVEL": {
      "type": "string",
      "enum": ["fatal", "error", "warn", "info", "debug", "trace"]
    },
    "API_TIMEOUT_MS": { "type": "integer", "minimum": 0 },
    "PROXY_URL": { "type": "string" },
    "APIKEY": { "type": "string" },
    "HOST": { "type": "string" },
    "NON_INTERACTIVE_MODE": { "type": "boolean" },
    "Providers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "api_base_url", "api_key", "models"],
        "properties": {
          "name": { "type": "string" },
          "api_base_url": { "type": "string" },
          "api_key": { "type": "string" },
          "models": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "transformer": { "type": "object" }
        },
        "additionalProperties": true
      }
    },
    "Router": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string" },
        "background": { "type": "string" },
        "think": { "type": "string" },
        "longContext": { "type": "string" },
        "longContextThreshold": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
